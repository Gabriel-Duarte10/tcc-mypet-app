<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="tcc_mypet_app.Views.App.AppView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:tcc_mypet_app.Views.App"
    NavigationPage.HasNavigationBar="False">
    <TabBar>
        <Tab Title="Inicio" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:StartView}" Route="startView" />
        </Tab>
        <Tab Title="Mensagens" Icon="message.png">
            <ShellContent ContentTemplate="{DataTemplate views:ChatView}" Route="chatView" />
        </Tab>
        <Tab Title="Perfil" Icon="profile.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfileView}" Route="profileView" />
        </Tab>
    </TabBar>
</Shell>